<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>JpaFilter</filter-name>
        <filter-class>jsf.filter.JpaFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/itens.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/cadastro-itens.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/listas.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/cadastro-listas.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/itens-lista.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>JpaFilter</filter-name>
        <url-pattern>/cadastro-itens-lista.xhtml</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>
</web-app>